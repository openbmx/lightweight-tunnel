#!/usr/bin/env bash
set -euo pipefail

REPO_DIR="$(cd "$(dirname "$0")" && pwd)"
cd "$REPO_DIR"

if [ ! -d "$REPO_DIR/.git" ]; then
  echo "This script must be run from the repository root (directory containing .git)."
  exit 1
fi

if [ -n "$(git status --porcelain)" ]; then
  echo "Working tree has local changes. Please commit or stash them before running mupdate."
  exit 1
fi

echo "Pulling latest changes..."
if ! git pull --ff-only; then
  echo "git pull failed. Ensure the repository is clean, branches are not diverged (fast-forward only), resolve any issues, and verify network connectivity before rerunning this script."
  exit 1
fi

echo "Building lightweight-tunnel..."
if ! make build; then
  echo "Build failed. Ensure Go is installed and dependencies are available, then rerun this script."
  exit 1
fi

BIN_PATH="$REPO_DIR/bin/lightweight-tunnel"
TARGET="/usr/local/bin/lightweight-tunnel"

if [ ! -f "$BIN_PATH" ]; then
  echo "Build output not found at $BIN_PATH"
  exit 1
fi

echo "Installing binary to $TARGET..."
if ! install -m 755 "$BIN_PATH" "$TARGET"; then
  if command -v sudo >/dev/null 2>&1; then
    echo "Retrying with sudo..."
    if ! sudo install -m 755 "$BIN_PATH" "$TARGET"; then
      echo "Installation failed even with sudo. Please check permissions for $TARGET."
      exit 1
    fi
  else
    echo "Installation failed and sudo is not available. Please check permissions for $TARGET."
    exit 1
  fi
fi
echo "Update completed."
